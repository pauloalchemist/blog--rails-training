<div id="post_content">

  <h1 class="title'">
    <%= @post.title %>
  </h1>

  <p class="date">
    Enviado em <%= time_ago_in_words(@post.created_at) %>
      <%= link_to 'Editar', edit_post_path(@post)%>
      <%= link_to 'Excluir', post_path(@post), 
          method: :delete, data: {confirm: 'Tem certeza que quer excluir?'} %>
  </p>

  <p class="body">
    <%= @post.body %>
  </p>

  <div id="comments">
    <h2><%= @post.comments.count %> Comments</h2>
    <%= render @post.comments %>
    <h3>Add a comment:</h3>
    <%= render "comments/form" %>
  </div>

</div>
