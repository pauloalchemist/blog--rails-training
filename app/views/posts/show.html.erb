<div id="post_content">

  <h1 class="title'">
    <%= @post.title %>
  </h1>

  <p class="date">
    Enviado em <%= time_ago_in_words(@post.created_at) %>
      <%= link_to 'Editar', edit_post_path(@post)%>
      <%= link_to 'Excluir', post_path(@post)%>
  </p>

  <p class="body">
    <%= @post.body %>
  </p>

</div>
