<div class="page_wrapper">
  <h1>Novo post</h1>

    <%= form_with model: @post do |f| %>

    <% if @post.errors.any? %>
      <div id= 'errors'>
        <h2><%= pluralize(@post.errors.count, 'erro')%> 
            Veja abaixo o que impediu a postagem de ser salva:
        </h2>
        <ul>
          <% @post.errors.full_messages.each do |msg|%>
            <li><%= msg%></li>
          <% end %>
        </ul>
      </div>
    <% end %>

